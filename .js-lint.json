{
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "space-infix-ops": 2,
        "camelcase": [
            2,
            {
                "properties": "always"
            }
        ],
        "space-before-function-paren": [
            2,
            "never"
        ],
        "space-before-blocks": [
            2,
            "always"
        ],
        "brace-style": [
            2,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "semi": [
            2,
            "always"
        ],
        "key-spacing": [
            2,
            {
                "singleLine": {
                    "beforeColon": false,
                    "afterColon": true
                },
                "multiLine": {
                    "beforeColon": false,
                    "afterColon": true
                }
            }
        ],
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "no-unused-vars": 0,
        "one-var": 0,
        "no-trailing-spaces": [
            2,
            {
                "skipBlankLines": true
            }
        ],
        "operator-linebreak": [
            2,
            "after"
        ],
        "no-unreachable": 2
    },
    "globals": {
        "$": false
    }
}
